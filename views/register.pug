doctype
html
	head
		title= title

		meta( name="theme-color", content="#692C91" )
		meta( name="viewport", content="width=device-width, initial-scale=1.0" )
		link( href="/build/material.min.css", type="text/css", rel="stylesheet" )
		link( href="/css/master.css", type="text/css", rel="stylesheet" )
		link( href="/fonts/fonts.css", type="text/css", rel="stylesheet" )

		block styles

	body.mdl-color--grey-100.login-page

		div.mdl-layout
			main.mdl-layout__content


				div.mdl-card.mdl-shadow--6dp
					form( action="/register", method="POST" )

						div.mdl-card__title.mdl-color--primary.mdl-color-text--white
							h2.mdl-card__title-text OmniSystem

						div.mdl-card__supporting-text

							div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
								input.mdl-textfield__input( name="name", id="name", required )
								label.mdl-textfield__label( for="name" ) Nome

							div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
								input.mdl-textfield__input( type="email", name="email", id="email", required )
								label.mdl-textfield__label( for="email" ) E-mail

							div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
								input.mdl-textfield__input( type="phone", name="phone", id="phone" )
								label.mdl-textfield__label( for="phone" ) Telefone

							div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
								input.mdl-textfield__input( type="password", name="password", id="password", required )
								label.mdl-textfield__label( for="password" ) Senha

							div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
								input.mdl-textfield__input( type="password", name="retype_password", id="retype_password", required )
								label.mdl-textfield__label( for="retype_password" ) Confirme a senha

						div.mdl-card__actions.mdl-card--border
							button.mdl-button.mdl-button--colored.mdl-js-button.mdl-js-ripple-effect( type="submit" ) Cadastrar 
							a( href="/login" ) Entrar

		script( src="/build/material.min.js", type="text/javascript" )
		block scripts