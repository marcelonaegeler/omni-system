extends /includes/base

block body

	div.mdl-grid
		form.mdl-color--white.mdl-shadow--2dp.mdl-cell.mdl-cell--12-col.mdl-grid(action="/estoque/"+ ( stock ? 'edit' : 'save' ) , method="POST", enctype="application/x-www-form-urlencoded")

			div.mdl-cell.mdl-cell--6-col
				div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
					select#select_product.mdl-textfield__input( name="product_id", required )
						for product in products
							option( value=product._id, selected=( stock && stock.product === product._id ? true : false ) )= product.name
					label.mdl-textfield__label( for="select_product" ) Produto

				div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
					input#input_quantity.mdl-textfield__input( type="number", name="quantity", required )
					label.mdl-textfield__label( for="input_quantity" ) Quantidade em estoque

				div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
					input#input_price.mdl-textfield__input( type="number", name="price", step="0.01", required )
					label.mdl-textfield__label( for="input_price" ) Pre√ßo de venda
					
				div.text-center
					button.mdl-button.mdl-js-button.mdl-button--primary( type="submit" ) Salvar